# Project Zomboid Server Configuration
# Copy this file to .env and modify the values as needed

# Server Identity
SERVER_NAME=My Project Zomboid Server
# Leave empty for no password, or set a password for players to join
SERVER_PASSWORD=
# REQUIRED: Set a strong admin password
ADMIN_PASSWORD=changeme

# Server Settings
# Maximum number of players (1-100, recommended: 16 for ARM64)
MAX_PLAYERS=16
# Show server in public server list (true/false)
SERVER_PUBLIC=false
# Pause the game when no players are online (true/false)
PAUSE_EMPTY=true

# Performance Settings
# Memory allocation for the server (e.g., 4096m, 6g)
# Orange Pi 5 Pro recommendation: 4096m to 6144m
MEMORY=4096m

# Update Settings
# Automatically update server on container start (true/false)
AUTO_UPDATE=true

# Network Settings
# Default game port (UDP)
SERVER_PORT=16261

# Mods and Workshop
# Semicolon-separated list of mod IDs (leave empty for no mods)
MODS=
# Semicolon-separated list of Workshop item IDs (leave empty for no workshop items)
WORKSHOP_ITEMS=

# Advanced Settings (optional)
# Uncomment and modify if needed

# Box64 Performance Tuning
# BOX64_DYNAREC_STRONGMEM=1
# BOX64_DYNAREC_BIGBLOCK=1
# BOX64_DYNAREC_SAFEFLAGS=0

# Java Options (additional JVM arguments)
# JAVA_OPTS=-XX:+UseG1GC -XX:MaxGCPauseMillis=200
